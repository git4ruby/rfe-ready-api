# Database — DO NOT set DATABASE_URL here.
# database.yml handles dev/test DB names. Setting DATABASE_URL overrides
# database.yml and causes test suite to wipe the development database.
# Only set DATABASE_URL in production (e.g. on the server).

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Secret (generate with: rails secret)
DEVISE_JWT_SECRET_KEY=your_jwt_secret_key_here

# Lockbox Master Key (generate with: Lockbox.generate_key)
LOCKBOX_MASTER_KEY=your_lockbox_master_key_here

# AWS S3
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
AWS_BUCKET=rfe-ready-uploads

# OpenAI (for AI features — GPT-4o)
OPENAI_API_KEY=sk-your-key-here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Email (SMTP)
SMTP_ADDRESS=smtp.example.com
SMTP_USERNAME=your_username
SMTP_PASSWORD=your_password

# Sentry (error monitoring)
SENTRY_DSN=
